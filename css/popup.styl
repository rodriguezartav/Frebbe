.popup_canvas
	display: none
	position: absolute
	top: 0px
	left: 0px
	width: 100%
	height: 100%
	background-color: #333
	background-color: rgba(33,33,33,0.3)

	.popup
		width: 35%
		height: 70%
		min-width: 300px
		position: absolute
		left: 30%
		top: 10%
		background-color: #fff
		border: 2px solid #000
		padding: 10px
		overflow: auto
		
		&.gallery
			background-color: #fff
			
			header
				margin-bottom: 5px
				h1
					display: inline-block
	
			.type
				display: inline-block
				width: 22%
				span
					display: block
					cursor: pointer
					padding: 8px
					
			.list
				display: inline-block
				width: 74%
				padding-left: 12px
				border-left: 1px solid #333

				.create
					padding-bottom: 10px
					margin: 5px 0px 10px 0px
					text-align: right

					span
						border: 1px solid #333
						display: inline-block
						margin: 5px
						padding: 5px
						cursor: pointer
						font-size: 12px

					textarea
						width: 100%
						font-size: 14px
						height: 80px

				.item
					display: block
					padding: 5px
					border-top: 1px solid 
					font-size: 13px
					margin-bottom: 2px
					cursor: pointer
					:hover
						background-color: #fff
