@import './mixin'
@import './theme'

body, html,h1,h2,h3,h4,h5,ul,li,p
	margin: 0;
	padding: 0;

*
	vertical-align: top

ul , li
	list-style: none

#app_canvas
	> *:not(.active)
		display: none

body
	height: 100%
	width: 100%
	overflow: hidden

	.header
		border-bottom: 1px solid #efefef
		position: relative
		background-color: #333

		h1
			font-size: 25px
			padding: 11px 1px 11px 15px
			display: inline-block
			color: #fff

		.user_box
			display: inline-block
			padding-top: 14px
			color: #fff

		.login_box
			position: absolute
			top: 10px 
			right: 10px

			span
				background-color: #fff
				border: 1px solid #efefef
				padding: 8px
				cursor: pointer
				&:hover
					background-color: #f8f8f8
				

	.info
		margin: 8px 15px
		border: 1px dashed red
		padding: 8px 15px
		color: red
		
		p
			font-size: 19px
		span
			font-size: 13px
		
.frebbe
	.social
		float: left
		width: 230px
		height: 100%
		border-right: 1px solid #333333

	.browser_canvas
		display: block
		overflow: auto
		position: relative
		margin-left: 15x
		
		.search
			border-bottom: 1px #e9e9e9
			padding: 8px
			background-color: #393939
			font-size: 18px
			input
				width: 200px
		
		.list
			display: inline-block
			width: 150px
			border-right: 1px solid #333
			height: 100%
			.item
				display: block
				border-bottom: 1px solid #e9e9e9
				padding: 10px
				

.pages
	margin-top: 5px
	.social
		float: left
		width: 230px
		height: 100%

	.slides_canvas
		display: block
		overflow: auto
		position: relative
		margin-left: 15px

		.viewport
			position: absolute
			width: 3000px

			.item
				display: inline-block
				overflow: hidden

				.menu
					height: 100%
					display: inline-block
					width: 256px

					.box_wrapper
						height: 99%
						margin: 0px 50px 0px 6px
						border: 1px solid #e9e9e9
						padding: 0px 5px

						h3
							padding: 5px

						.options
							border: 1px dashed #dddddd
							padding-left: 3px
							margin-left: 5px
							margin-right: 8px

							span
								padding-right: 8px
								font-size: 12px
								line-height: 20px
								cursor: pointer
								display: inline-block
								color: blue
								&:hover
									text-decoration: underline

						span.link
							cursor: pointer
							display: block
							padding: 5px 5px
							&:first-child
								margin-top: 5px
							&:hover
								background-color: blue

						input
							margin: 5px
							padding: 6px
							width: 85%

				.content
					display: inline-block
					overflow: auto
					height: 100%

					h1
						font-size: 22px
					
					p
						font-size: 17px
						line-height: 23px
						letter-spacing: 0.1em
						
					input
						font-size: 22px

					.box_wrapper
						border: 1px solid #e9e9e9
						height: 99%
						padding: 0px 8px

						.editable
							margin-top: 4px
							padding: 5px
							
							input
								width: 90%
								padding: 7px

							textarea
								width: 100%
								padding: 5px
								height: 200px
							
							&:hover
								background-color: #e9e9e9
								
							input,textarea
								display: none

							&.editing
								:first-child
									display: none
								input,textarea
									display: block

						img
							height: 900px
							width: 600px
							background-color: #e9e9e9
							margin: 50px
